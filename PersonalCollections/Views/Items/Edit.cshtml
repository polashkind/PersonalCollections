@model NewItemVM
@using PersonalCollections.Data.ViewModels;

@{
    ViewData["Title"] = "Update Item";
}

<div class="row-text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Item</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                <div class="form-group">
                    <label asp-for="CollectionId" class="control-label"></label>
                    <select asp-for="CollectionId" class="form-control" asp-items="ViewBag.Collections"></select>
                    <span asp-validation-for="CollectionId" class="text-danger"></span>

                </div>

                    <div class="form-group">
                        <input type="submit" value="Save Changes" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-success float-right" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>